{
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "boot": "auto",
  "description": "A Home Assistant add-on to enable controlling smart beds.",
  "host_network": true,
  "name": "Smartbed MQTT",
  "options": {
    "bleProxies": [
      {
        "host": "bluetooth-proxy.local"
      }
    ],
    "ergoMotionDevices": [
      {
        "friendlyName": "ErgoMotion Bed",
        "ipAddress": "192.168.0.127",
        "remoteStyle": "M"
      }
    ],
    "ergoWifiCredentials": [
      {
        "email": "me@example.org",
        "password": "some strong password"
      }
    ],
    "furniMoveDevices": [
      {
        "friendlyName": "Furni Move Bed",
        "name": "OKIN_345678",
        "remoteCode": "94238"
      }
    ],
    "leggettPlattDevices": [
      {
        "friendlyName": "Leggett Platt Bed",
        "name": "Smart Bed"
      }
    ],
    "linakDevices": [
      {
        "friendlyName": "Linak Bed",
        "hasMassage": true,
        "name": "LINAK Bed 0123"
      }
    ],
    "logicdataDevices": [
      {
        "friendlyName": "Logicdata Bed",
        "name": "WIND123456"
      }
    ],
    "membersMarkDevices": [
      {
        "friendlyName": "Members Mark Adjustable Bed",
        "name": "KSBT03C000015046"
      }
    ],
    "motoSleepDevices": [
      {
        "friendlyName": "MotoSleep Bed",
        "name": "HHC123ABCD"
      }
    ],
    "mqtt_host": "<auto_detect>",
    "mqtt_password": "<auto_detect>",
    "mqtt_port": "<auto_detect>",
    "mqtt_user": "<auto_detect>",
    "reverieDevices": [
      {
        "friendlyName": "Reverie Bed",
        "name": "RPLC"
      }
    ],
    "richmatDevices": [
      {
        "friendlyName": "Richmat Bed",
        "name": "QRRM12345",
        "remoteCode": "V1RM",
        "stayConnected": "false"
      }
    ],
    "sleeptrackerCredentials": [
      {
        "email": "me@example.org",
        "password": "some strong password",
        "type": "tempur"
      }
    ],
    "sleeptrackerRefreshFrequency": 1,
    "solaceDevices": [
      {
        "friendlyName": "Solace Bed",
        "name": "S4-Y-123-456789"
      }
    ],
    "type": "sleeptracker"
  },
  "schema": {
    "bleProxies": [
      {
        "encryptionKey": "match(^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)$)?",
        "expectedServerName": "str?",
        "host": "str",
        "password": "password?",
        "port": "int(1,65536)?"
      }
    ],
    "ergoMotionDevices": [
      {
        "friendlyName": "str",
        "ipAddress": "str",
        "remoteStyle": "list(L|M|H)?"
      }
    ],
    "ergoWifiCredentials": [
      {
        "email": "email",
        "password": "password",
        "remoteStyle": "list(L|M|H)?"
      }
    ],
    "furniMoveDevices": [
      {
        "friendlyName": "str",
        "name": "str",
        "remoteCode": "str"
      }
    ],
    "leggettPlattDevices": [
      {
        "friendlyName": "str",
        "name": "str"
      }
    ],
    "linakDevices": [
      {
        "friendlyName": "str",
        "hasMassage": "bool?",
        "name": "str"
      }
    ],
    "logicdataDevices": [
      {
        "friendlyName": "str",
        "ipAddress": "str?",
        "name": "str"
      }
    ],
    "membersMarkDevices": [
      {
        "friendlyName": "str",
        "name": "str"
      }
    ],
    "motoSleepDevices": [
      {
        "friendlyName": "str",
        "name": "str",
        "stayConnected": "bool?"
      }
    ],
    "mqtt_host": "str",
    "mqtt_password": "password",
    "mqtt_port": "str",
    "mqtt_user": "str",
    "reverieDevices": [
      {
        "friendlyName": "str",
        "name": "str"
      }
    ],
    "richmatDevices": [
      {
        "friendlyName": "str",
        "name": "str",
        "remoteCode": "str",
        "stayConnected": "bool?"
      }
    ],
    "sleeptrackerCredentials": [
      {
        "email": "email",
        "password": "password",
        "type": "list(tempur|beautyrest|serta)?"
      }
    ],
    "sleeptrackerRefreshFrequency": "int(0,)",
    "solaceDevices": [
      {
        "friendlyName": "str",
        "name": "str"
      }
    ],
    "type": "list(sleeptracker|ergowifi|richmat|linak|solace|motosleep|reverie|leggettplatt|logicdata|ergomotion|furnimove|membersmark)"
  },
  "services": [
    "mqtt:need"
  ],
  "slug": "smartbed-mqtt",
  "startup": "application",
  "url": "https://github.com/richardhopton/smartbed-mqtt",
  "version": "1.1.16"
}
