{
  "name": "Smartbed MQTT",
  "version": "1.1.9",
  "slug": "smartbed-mqtt",
  "description": "A Home Assistant add-on to enable controlling smart beds.",
  "url": "https://github.com/richardhopton/smartbed-mqtt",
  "startup": "application",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "boot": "auto",
  "services": ["mqtt:need"],
  "options": {
    "mqtt_host": "<auto_detect>",
    "mqtt_port": "<auto_detect>",
    "mqtt_user": "<auto_detect>",
    "mqtt_password": "<auto_detect>",
    "type": "sleeptracker",
    "sleeptrackerRefreshFrequency": 1,
    "sleeptrackerCredentials": [
      {
        "email": "me@example.org",
        "password": "some strong password",
        "type": "tempur"
      }
    ],
    "ergoMotionCredentials": [
      {
        "email": "me@example.org",
        "password": "some strong password"
      }
    ],
    "richmatDevices": [
      {
        "name": "QRRM12345",
        "friendlyName": "Richmat Bed",
        "remoteCode": "VIRM",
        "stayConnected": "false"
      }
    ],
    "linakDevices": [
      {
        "name": "LINAK Bed 0123",
        "friendlyName": "Linak Bed",
        "hasMassage": true
      }
    ],
    "solaceDevices": [
      {
        "name": "S4-Y-123-456789",
        "friendlyName": "Solace Bed"
      }
    ],
    "motoSleepDevices": [
      {
        "name": "HHC123ABCD",
        "friendlyName": "MotoSleep Bed"
      }
    ],
    "reverieDevices": [
      {
        "name": "RPLC",
        "friendlyName": "Reverie Bed"
      }
    ],
    "bleProxies": [
      {
        "host": "bluetooth-proxy.local"
      }
    ]
  },
  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "str",
    "mqtt_user": "str",
    "mqtt_password": "password",
    "type": "list(sleeptracker|ergomotion|richmat|linak|solace|motosleep|reverie)",
    "sleeptrackerRefreshFrequency": "int(0,)",
    "sleeptrackerCredentials": [
      {
        "email": "email",
        "password": "password",
        "type": "list(tempur|beautyrest|serta)?"
      }
    ],
    "ergoMotionCredentials": [
      {
        "email": "email",
        "password": "password"
      }
    ],
    "richmatDevices": [
      {
        "name": "str",
        "friendlyName": "str",
        "remoteCode": "str",
        "stayConnected": "bool?"
      }
    ],
    "linakDevices": [
      {
        "name": "str",
        "friendlyName": "str",
        "hasMassage": "bool?"
      }
    ],
    "solaceDevices": [
      {
        "name": "str",
        "friendlyName": "str"
      }
    ],
    "motoSleepDevices": [
      {
        "name": "str",
        "friendlyName": "str",
        "stayConnected": "bool?"
      }
    ],
    "reverieDevices": [
      {
        "name": "str",
        "friendlyName": "str"
      }
    ],
    "bleProxies": [
      {
        "host": "str",
        "port": "int(1,65536)?",
        "password": "password?",
        "encryptionKey": "match(^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)$)?",
        "expectedServerName": "str?"
      }
    ]
  }
}
